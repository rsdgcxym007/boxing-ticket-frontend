{
  "appId": "com.patongboxing.ticket.app",
  "productName": "Patong Boxing Ticket System",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    ".output/public/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "compression": "normal",
  "mac": {
    "category": "public.app-category.business",
    "icon": "build/icon.icns",
    "target": [
      {
        "target": "zip",
        "arch": ["arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  }
}
