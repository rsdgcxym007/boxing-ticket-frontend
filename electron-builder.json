{
  "appId": "com.patongboxing.ticket.app",
  "productName": "Patong Boxing Ticket System",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    ".output/public/**/*",
    "electron/**/*",
    "package.json",
    "!**/node_modules/**/*",
    "!src/**/*",
    "!electron/src/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "compression": "normal",
  "artifactName": "Patong-Boxing-Ticket-System-${version}-${arch}-${os}.${ext}",
  "publish": {
    "provider": "github",
    "owner": "rsdgcxym007",
    "repo": "boxing-ticket-frontend",
    "releaseType": "release"
  },
  "mac": {
    "category": "public.app-category.business",
    "icon": "build/icon.icns",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "notarize": false,
    "identity": null,
    "type": "development",
    "minimumSystemVersion": "10.15",
    "darkModeSupport": true,
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip", 
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Patong Boxing Ticket System"
  },
  "dmg": {
    "icon": "build/icon.icns",
    "iconSize": 100,
    "contents": [
      {
        "x": 380,
        "y": 280,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 110,
        "y": 280,
        "type": "file"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  }
}
