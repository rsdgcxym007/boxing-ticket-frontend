# Environment Configuration for Boxing Ticket Frontend

# Development Environment
NODE_ENV=development
PORT=3000
NITRO_HOST=localhost
NITRO_PORT=3000

# API Configuration
NUXT_PUBLIC_API_BASE=http://localhost:4000
NUXT_PUBLIC_WS_URL=ws://localhost:4000/realtime
NUXT_PUBLIC_SOCKET_URL=http://localhost:4000

# App Configuration
NUXT_PUBLIC_APP_NAME="Patong Boxing Ticket System"
NUXT_PUBLIC_APP_VERSION="1.0.31"
NUXT_PUBLIC_APP_URL=http://localhost:3000

# Security
NUXT_JWT_SECRET=your-secret-jwt-key-here
NUXT_API_SECRET=your-api-secret-key-here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_REALTIME=true
ENABLE_MOBILE_APP=true
ENABLE_NOTIFICATIONS=true

# Development Settings
NUXT_DEBUG=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# NITRO_HOST=0.0.0.0
# NUXT_PUBLIC_API_BASE=http://43.229.133.51:4000
# NUXT_PUBLIC_SOCKET_URL=http://43.229.133.51:4000
# NUXT_PUBLIC_WS_URL=ws://43.229.133.51:4000/realtime

# Optional: SSL Configuration (if using HTTPS)
# NUXT_PUBLIC_API_BASE=https://your-domain.com
# NUXT_PUBLIC_SOCKET_URL=https://your-domain.com
# NUXT_PUBLIC_WS_URL=wss://your-domain.com/realtime
